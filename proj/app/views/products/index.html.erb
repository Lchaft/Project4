<div class="jumbotron" style="background-color:#FAE0EE;>
<h2 class= "display-4">Buy More Scrunchies <%= link_to "(+)", new_product_path, class: 'link-to-new-color' %></h2>
</div>



<% @products.each do |product| %>
      <h3>
      
      <%= link_to product.brand, product_path(product), class: 'link-to-text-color'  %>  </h3> 
      <p><%= link_to 'Delete Scrunchie', product_path(product), class: 'link-to-delete-color',
              method: :delete,
              data: { confirm: 'You dare delete this scrunchie?' } %></p>
  <% end %>